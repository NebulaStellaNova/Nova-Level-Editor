<vbox id="danceLeft" text="Dance Left" width="100%" style="padding: 0px;" height="75%">
    <scrollview width="100%" height="100%" contentWidth="100%">
        <grid width="100%" style="padding: 10px;">                         
            <label text="Animation Prefix:" style="padding: 2px;" verticalAlign="center"/>
            <textfield  id="danceLeftPrefix" validator="required" placeholder="Prefix" width="100%" verticalAlign="center" tooltip="Animation name inside the XML. This is case sensitive. \nThis is a required field."/>
            
            <label text="Indices:" style="padding: 2px;" verticalAlign="center"/>
            <textfield  id="danceLeftIndices" placeholder="None" width="100%" verticalAlign="center" tooltip="What frames of the specified prefix should your animation use." restrictChars="0-9, "/>     
            
            <label text="Offsets:" style="padding: 2px;" verticalAlign="center"/>
            <hbox width="100%">
                <number-stepper id="danceLeftOffsetX" pos="0" step="1" width="100%" verticalAlign="center" tooltip="Offestt Animation X"/>
                <number-stepper id="danceLeftOffsetY" pos="0" step="1" width="100%" verticalAlign="center" tooltip="Offestt Animation Y"/>
            </hbox>

            <label text="Frame Rate:" style="padding: 2px;" verticalAlign="center"/>
            <number-stepper id="danceLeftFrameRate" min="0" pos="24" step="1" width="100%" verticalAlign="center" tooltip="Frame Rate of your animation. Default is 24."/>
        </grid>
        <hbox width="100%" style="padding: 10px;">
            <spacer width="30%"/>
            <label text="Flip X:" style="padding: 2px;" verticalAlign="center"/>
            <checkbox id="danceLeftFlipX"/>
            <spacer width="10%"/>
            <label text="Flip Y:" style="padding: 2px;" verticalAlign="center"/>
            <checkbox id="danceLeftFlipY"/>
            <spacer width="10%"/>
            <label text="Looped:" style="padding: 2px;" verticalAlign="center"/>
            <checkbox id="danceLeftLooped"/>
        </hbox>
    </scrollview>
</vbox>