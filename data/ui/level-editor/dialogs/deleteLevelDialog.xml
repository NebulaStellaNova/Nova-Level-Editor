<?xml version="1.0" encoding="utf-8" ?>
<dialog id="deleteDialog" width="350" height="175" title="WOAH!" closable="false" style="background-color: rgb(90, 47, 48);">
	<vbox width="100%" height="100%">
		<box height="10"/>
		<hbox>
			<box width="1"/>
			<image resource="haxeui-core/styles/shared/error-large.png"/>
			<box width="10"/>
			<label text= "You are about to delete this level, \nthis action cannot be undone.\nAre you sure you want to proceed?" style="color: rgb(255, 150, 150);"/>
		</hbox>
	</vbox>
	<footer>
		<hbox>
			<button text="No, Cancel" id="dialogCancel"/>
			<spacer width="94" />
			<button text="Yes, Delete Level" id="dialogContinue" />
			<!-- style="color: rgb(200, 70, 70); border-color: rgb(200, 81, 119); background: linear-gradient(rgb(200, 65, 66), rgb(200, 56, 58));" -->
		</hbox>
	</footer>
</dialog>
