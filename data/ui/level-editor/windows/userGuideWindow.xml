        </box> -->

        <box text="Discord">
            <vbox>
                <!-- tooltip="For more help with the editor join this server." -->
                <!--  <label text="Nova Editor Server:"/>
                <label text="https://discord.gg/MTMRYc63Dj"/> -->
                <card width="450" styleName="discord-card">
                    <vbox>
                        <label text="Nova Utils Server"
                            style="font-name:'fonts/gintoMedium.ttf';color: white;" />
                        <box height="2" />
                        <label text="For more help with the editor"
                            style="font-name:'fonts/gintoRegular.ttf'" />
                        <label text="join this server!" style="font-name:'fonts/gintoRegular.ttf'" />
                        <box height="2" />
                        <button id="joinNovaButton" styleName="discord-button" width="420"
                            text="Join" tooltip="https://discord.gg/MTMRYc63Dj"
                            style="font-name:'fonts/gintoRegular.ttf'" />
                    </vbox>
                </card>
                <spacer height="3" />
                <card width="450" styleName="discord-card">
                    <vbox>
                        <label text="V-Slice Network"
                            style="font-name:'fonts/gintoMedium.ttf';color: white;" />
                        <box height="2" />
                        <label text="For help related to V-Slice Modding"
                            style="font-name:'fonts/gintoRegular.ttf'" />
                        <label text="join this server!" style="font-name:'fonts/gintoRegular.ttf'" />
                        <box height="2" />
                        <button id="joinNetworkButton" styleName="discord-button" width="420"
                            text="Join" tooltip="https://discord.gg/ca2Kb6kukm"
                            style="font-name:'fonts/gintoRegular.ttf'" />
                    </vbox>
                </card>

            </vbox>
        </box>

