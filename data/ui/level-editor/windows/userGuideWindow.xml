<window title="User Guide" width="500" height="600" maximizable="false" minimizable="false"
    collapsable="false" closable="false">
    <style>
        .discord-card {
        background: #313234;
        border-radius: 10px;
        }

        .discord-button {
        background: #00863a;
        border: none;
        border-radius: 15px;
        color: white;
        font-name:'fonts/gintoRegular.ttf';
        }

        .discord-button:hover {
        background: #057834
        }

        .discord-button:down {
        background: #02662c
        }
    </style>

    <tabview id="tv2" width="100%" height="100%">
        <box text="Guide">
            <vbox width="100%">
                <label
                    text="Welcome to the User Guide for the Nova Level Editor! In the \nUser Guide you'll be able to learn basic use and functionality \nof the Level Editor. Not only that but you'll also find useful \ntips and tricks you can use while creating/editing levels."
                    style="padding: 2px;" verticalAlign="center" />
                <spacer height="10" />
                <label text="To get started, click on one of the taps at the top of window!"
                    style="padding: 2px;" verticalAlign="center" />
                <spacer height="310" />
                <label text="- GENZU" style="padding: 2px;" verticalAlign="center" />
            </vbox>
        </box>

        <box text="Keybinds">
            <tableview width="450" height="445" contentWidth="100%">
                <header width="100%">
                    <column id="action" text="Action" width="50%" />
                    <column id="keybind" text="Keybind" width="50%" />
                </header>
                <data>
                    <item action="Show User Guide" keybind="F1" />
                    <item action="New Level" keybind="Ctrl + N" />
                    <item action="Save Level" keybind="Ctrl + S" />
                    <item action="Exit To Menu" keybind="Ctrl + Q" />
                </data>
            </tableview>
        </box>

        <box text="Credits">
            <tableview width="450" height="445" contentWidth="100%">
                <header width="100%">
                    <column id="action" text="Name" width="50%" />
                    <column id="keybind" text="Role" width="50%" />
                </header>
                <data>
                    <item action="Nebula S. Nova" keybind="Main Coder, Lofi Freaky Menu" />
                    <item action="GENZU" keybind="Coded The UI" />
                </data>
            </tableview>
        </box>

        <box text="Change Log">
            <scroll-view width="449" height="445" contentWidth="100%">
                <vbox>
                    <frame text="v1.0.1" width="425">
                        <vbox>
                            <label text="—— Fixes ——" />
                            <spacer />
                            <label text="• Fix editor not letting you make a new prop if you have\n  none." />
                            <spacer />
                        </vbox>
                    </frame>
                    <frame text="v1.0.0" width="425">
                        <vbox>
                            <label text="—— Additions ——" />
                            <spacer />
                            <label text="• Initial Release." />
                            <spacer />
                        </vbox>
                    </frame>
                </vbox>
            </scroll-view>
        </box>

