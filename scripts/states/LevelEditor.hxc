    function create() {
        super.create();
        Cursor.show();

        instance = this;

        initStyles();

        // -- Intialize Camears -- \\
        LEVEL_CAMERA = new FlxCamera();
        LEVEL_CAMERA.bgColor = FlxColor.TRANSPARENT;
        FlxG.cameras.add(LEVEL_CAMERA, false);
        
        UI_CAMERA = new FlxCamera();
        UI_CAMERA.bgColor = FlxColor.TRANSPARENT;
