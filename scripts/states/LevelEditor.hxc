        trace(save.data.editorSong.key);
        save.bind("nova-editors", "NebulaStellaNova");
        if (save.data.editorSong == null) {
            save.data.editorSong = {
                title: "Artistic Expression",
                key: "chartEditorLoop"
            }
        }
		FunkinSound.playMusic(save.data.editorSong.key, {startingVolume: 0, overrideExisting: true, restartTrack: false, persist: true, loop: true});
		FlxG.sound.music.fadeIn(0.5 /* Duration */, 0, 1);

        var musicSlider = MENU_BAR.findComponent("menubarItemVolumeInstrumental");
        musicSlider.onChange = ()->{
            FlxG.sound.music.volume = musicSlider.pos/100;
            MENU_BAR.findComponent("editorMusicVolume").text = "Editor Music - " + Math.round(musicSlider.pos) + "%";
        }

        var musicMenu = MENU_BAR.findComponent("musicMenu");
        musicMenu.dataSource.add({text: "Freaky Menu", id: "freakyMenu"});
        
        var folders = [
            "assets/shared/music/",
            "assets/music/"
        ];
        for (mod in PolymodHandler.getAllMods()) {
            if (FileUtil.directoryExists("mods/" + mod.id + "/music/")) {
                folders.push("mods/" + mod.id + "/music/");
            }
        }
        for (folder in folders) {
            for (file in FileUtil.readDir(folder)) {
                if (file.endsWith(".ogg") || file == "credits" || file == "freakyMenu" || file == "gameplay") continue;
                var name;
                if (FileUtil.fileExists(folder + file + "/" + file + "-metadata.json")) {
                    name = Json.parse(FileUtil.readStringFromPath(folder + file + "/" + file + "-metadata.json")).songName;
                } else {
                    name = file;
                }
                musicMenu.dataSource.add({text: name, id: file});
                musicMenu.onChange = ()->{
                    save.data.editorSong = {
                        title: musicMenu.selectedItem.text,
                        key: musicMenu.selectedItem.id
                    }
                    FunkinSound.playMusic(musicMenu.selectedItem.id, {startingVolume: 1, overrideExisting: true, restartTrack: false, persist: true, loop: true});
                    
                    // FlxG.sound.music.fadeIn(0.5, 0, 1);
